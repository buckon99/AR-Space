<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp">

    <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:singleLine="true" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            android:hint="@string/password"
            android:autofillHints="@string/password"
            app:layout_constraintTop_toBottomOf="@+id/email"/>
    <TextView
            android:text="@string/login"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/login_button" android:contextClickable="false"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:clickable="true" android:textColor="#2180F3"
            app:layout_constraintHorizontal_bias="0.497" android:focusableInTouchMode="true"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/signup_button"
            app:layout_constraintVertical_bias="0.011"/>
    <Button
            android:text="@string/sign_up_button"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:id="@+id/signup_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/confirm_password"
            app:layout_constraintVertical_bias="0.355"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userID"
            android:singleLine="true" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.189" android:autofillHints="" android:hint="@string/user_id"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirm_password"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:hint="@string/confirm_password"
            android:autofillHints="@string/confirm_password"
            app:layout_constraintTop_toBottomOf="@+id/password"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPersonName|textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/userID" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="@string/email"
            app:layout_constraintHorizontal_bias="0.503" android:autofillHints="@string/email"/>
</android.support.constraint.ConstraintLayout>